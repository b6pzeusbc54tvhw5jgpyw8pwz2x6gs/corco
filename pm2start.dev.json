{
	"name"             : "corco-server",
	"args"             : ["--toto=heya coco", "-d", "1"],
	"cwd"             : "src/",
	"script"           : "src/bin/www",

	"instances"        : 1, //or 0 => 'max'
	"max_restarts"     : 10, // defaults to 15
	"watch"            : ["routes","bin"],
	"ignore_watch"      : ["[\\/\\\\]\\./", "node_modules"],
	"merge_logs"       : true,

	// Default environment variables that will be injected in any environment and at any start
	"env": {
		"VIEW_PATH": "./views",
		"PUBLIC_PATH": "./public",
		"DEVELOPMENT": true
	},
	"env_*" : {
		"SPECIFIC_ENV" : true
	}
}
